#!/bin/bash

pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
output_dir="pokemon_data_parallel"

mkdir -p "$output_dir"

pids=()

fetch_pokemon() {
    local pokemon=$1
    echo "Fetching data for $pokemon..."
    if curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$output_dir/${pokemon}.json"; then
        echo "Saved data to $output_dir/${pokemon}.json ✅"
    else
        echo "❌ Failed to fetch data for $pokemon."
    fi
}

# Start fetches in background and save PIDs
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
    pids+=($!)
done

# Wait for all jobs and kill any still running (just in case)
for pid in "${pids[@]}"; do
    wait "$pid" || {
        echo "Process $pid failed or was interrupted, killing it."
        kill "$pid" 2>/dev/null
    }
done

echo "All fetches complete."

